<%= render 'home/jumbo' unless user_signed_in? %>
<div id="pins" class="transitions-enabled">
        <% @pins.each do |pin| %>
            <div class="box">
                <div class="panel panel-default">
                    <%= link_to image_tag(pin.image.url(:medium)), pin %><br>
                    <div class="panel-body">
                        <%= pin.description %><br>
                        <strong><%= pin.user.name if pin.user %><br></strong>
                    </div>
                    <% if pin.user == current_user %>
                      <div class="panel-footer">
                          <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %>
                          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %>
                      </div>
                    <% end %>
                </div>
            </div>        
        <% end %>
</div>
       
  
  